{
  "name": "discord-bot-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "dev:full": "npm run db:start && npm run dev",
    "dev:docker": "docker-compose up -d postgres && npm run dev",
    "a2a:dev": "node src/a2a/server.js",
    "intuition:ping": "node src/scripts/intuition-ping.js",
    "ids:demo": "node src/scripts/ids-demo.js",
    "a2a:register": "node src/scripts/a2a-register-demo.js",
    "bot:address": "node scripts/get-bot-smart-account.js",
    "user:address": "node scripts/get-user-smart-account.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "setup:db": "node setup-database.js",
    "reset:db": "node reset-database.js",
    "db:start": "docker-compose up -d postgres",
    "db:stop": "docker-compose down",
    "db:restart": "docker-compose restart postgres",
    "db:logs": "docker-compose logs -f postgres",
    "db:reset": "docker-compose down -v && docker-compose up -d postgres",
    "tunnel": "node -e \"const domain = require('dotenv').config().parsed.NGROK_DOMAIN; console.log(`Starting direct ngrok tunnel to ${domain}...`); require('child_process').spawn('npx', ['ngrok', 'http', '--hostname=' + domain, '3000'], {stdio: 'inherit'});\""
  },
  "engines": {
    "node": ">=18.x"
  },
  "dependencies": {
    "@0xintuition/graphql": "1.0.0-alpha.1",
    "@0xintuition/sdk": "1.0.0-alpha.3",
    "@a2a-js/sdk": "^0.3.2",
    "viem": "^2.31.4",
    "@collabland/accountkit-sdk": "^0.2.0",
    "@mozilla/readability": "^0.6.0",
    "@openzeppelin/contracts-upgradeable": "^5.3.0",
    "axios": "^1.9.0",
    "cheerio": "^1.0.0",
    "cors": "^2.8.5",
    "discord.js": "^14.14.1",
    "dotenv": "^16.5.0",
    "ethers": "^5.7.2",
    "express": "^4.21.2",
    "fast-csv": "^5.0.2",
    "jsdom": "^26.1.0",
    "node-cache": "^5.1.2",
    "openai": "^4.98.0",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sanitize-html": "^2.16.0",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3",
    "sqlite3": "^5.1.7",
    "umzug": "^3.8.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@openzeppelin/contracts": "^5.3.0",
    "@openzeppelin/hardhat-upgrades": "^1.28.0",
    "@types/jest": "^29.5.14",
    "chai": "^4.3.10",
    "eslint": "^8.56.0",
    "ethereum-waffle": "^4.0.10",
    "hardhat": "^2.24.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "ngrok": "^4.3.3",
    "nodemon": "^3.0.3",
    "sinon": "^21.0.0",
    "supertest": "^7.1.0"
  },
  "description": "A modern Discord bot template using discord.js, Next.js, and ngrok for local development. Built for IDE agent-centric development with Collab.Land Account Kit integration support.",
  "main": "src/bot/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abridged/discord-bot-template.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/abridged/discord-bot-template/issues"
  },
  "homepage": "https://github.com/abridged/discord-bot-template#readme"
}
